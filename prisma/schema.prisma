generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  userId   Int @id @default(autoincrement()) 
  userName String @unique
  email    String @unique
  password String
  about    String?

  sentMessages     message[] @relation("sent")
  receivedMessages message[] @relation("received")
  groups           userGroup[]
}

model message {
  messageId   Int @id @default(autoincrement())
  messageText String
  timestamp   DateTime

  authorId    Int
  author      user @relation("sent", fields: [authorId], references: [userId])

  receiverId  Int?
  receiver    user? @relation("received", fields: [receiverId], references: [userId])
}

model group {
  groupId   Int @id @default(autoincrement())
  groupName String

  users     userGroup[]
}

model userGroup {
  userId      Int
  user        user @relation(fields: [userId], references: [userId])

  groupId     Int
  group       group @relation(fields: [groupId], references: [groupId])

  @@id([userId, groupId])
}